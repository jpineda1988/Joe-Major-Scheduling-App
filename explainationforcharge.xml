<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/part1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before an appointment can be scheduled, an $85 service fee must be charged to secure your appointment."
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/part2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This fee will be deducted from the total repair costs. Do you accept these terms? "
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_below="@+id/part1"/>

    <Button
        android:id="@+id/Accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginStart="52dp"
        android:layout_below="@+id/part2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_dark"
        android:layout_toRightOf="@+id/Accept"
        android:layout_alignBottom="@+id/Accept"
        android:layout_marginStart="20dp"/>

</RelativeLayout>